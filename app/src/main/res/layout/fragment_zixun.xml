<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorBaise"
    >
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:background="@color/tab_select_true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/zixun_back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_msg"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_text"
            android:hint="想吃什么就搜什么^_^"
            android:textColorHint="#CDCDC1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:maxLines="2"
             android:paddingLeft="20dp"
            android:background="@null"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/send"
            android:textColor="#fff"
            android:text="发送"
            android:background="#00AFEF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>