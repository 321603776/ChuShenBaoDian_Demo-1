<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                android:background="@color/colorBaise"
              android:orientation="vertical"
             tools:context=".fragment.MyInfoFragment">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:background="@color/tab_select_true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/myinfo_back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_my"
        android:layout_below="@id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/icon_chushen"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/text_myinfo"
            android:layout_marginTop="20dp"
            android:layout_below="@id/icon_image"
            android:text="厨神宝典  v1.0.0"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
<TextView
    android:id="@+id/text_qq"
   android:layout_centerInParent="true"
   android:gravity="center"
    android:text="QQ : 564286707"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_mianze"
        android:layout_above="@id/text_banquan"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="免责声明：本软件所采用的资源仅为学习用途\n非商业用途"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_banquan"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="厨神宝典   版权所有"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>